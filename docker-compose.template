version: "3.8"
services:
  app:
    image: "tailucas/snapshot-processor"
    build: .
    restart: unless-stopped
    logging:
      driver: syslog
    tmpfs:
    - /tmp
    hostname: __DOCKER_HOSTNAME__
    ports:
      - "21:21"
    volumes:
      - ./data:/data
      - /dev/log:/dev/log
    environment:
      FLASK_ENV: development
